[run]
# Only track coverage for XBrainLab, not dependencies
source = XBrainLab

# Explicitly omit problematic libraries that conflict with coverage instrumentation
omit =
    */.virtualenvs/*
    */site-packages/*
    */torch/*
    */torchvision/*
    */torchaudio/*
    */captum/*
    */pyvista/*
    */pyvistaqt/*
    */vtk*
    */mne/*
    tests/*

[report]
exclude_lines =
    pragma: no cover
    if TYPE_CHECKING:
    raise NotImplementedError
    @abstractmethod
